<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryActivity">

    <TextView
        android:id="@+id/StatHealth"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="99dp"
        android:text="Santé :"
        app:layout_constraintEnd_toStartOf="@+id/StatClass"
        app:layout_constraintTop_toBottomOf="@+id/Stats" />

    <TextView
        android:id="@+id/Stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Statistiques"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Equipement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StatStrength" />

    <TextView
        android:id="@+id/Objects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Objets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Armor" />

    <TextView
        android:id="@+id/StatClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="84dp"
        android:text="Classe :"
        app:layout_constraintEnd_toStartOf="@+id/StatExp"
        app:layout_constraintTop_toBottomOf="@+id/Stats" />

    <TextView
        android:id="@+id/StatExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="72dp"
        android:text="Exp :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Stats" />

    <TextView
        android:id="@+id/StatAgility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="56dp"
        android:text="Agilité :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StatExp" />

    <TextView
        android:id="@+id/StatDefense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="85dp"
        android:text="Défense :"
        app:layout_constraintEnd_toStartOf="@+id/StatStrength"
        app:layout_constraintTop_toBottomOf="@+id/StatHealth" />

    <TextView
        android:id="@+id/StatStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="91dp"
        android:text="Force :"
        app:layout_constraintEnd_toStartOf="@+id/StatAgility"
        app:layout_constraintTop_toBottomOf="@+id/StatClass" />

    <TextView
        android:id="@+id/Weapon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="138dp"
        android:text="Arme"
        app:layout_constraintEnd_toStartOf="@+id/Armor"
        app:layout_constraintTop_toBottomOf="@+id/Equipment" />

    <TextView
        android:id="@+id/Armor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="161dp"
        android:text="Armure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Equipment" />

    <TextView
        android:id="@+id/StatHealthValue"
        android:layout_width="40dp"
        android:layout_height="21dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="29dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/StatHealth"
        app:layout_constraintTop_toBottomOf="@+id/Stats" />

    <TextView
        android:id="@+id/StatClassValue"
        android:layout_width="40dp"
        android:layout_height="21dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/StatClass"
        app:layout_constraintTop_toBottomOf="@+id/Stats" />

    <TextView
        android:id="@+id/StatExpValue"
        android:layout_width="40dp"
        android:layout_height="21dp"
        android:layout_marginTop="29dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/StatExp"
        app:layout_constraintTop_toBottomOf="@+id/Stats" />

    <TextView
        android:id="@+id/StatDefenseValue"
        android:layout_width="41dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="21dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/StatDefense"
        app:layout_constraintTop_toBottomOf="@+id/StatHealthValue" />

    <TextView
        android:id="@+id/StatStrengthValue"
        android:layout_width="39dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="21dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/StatStrength"
        app:layout_constraintTop_toBottomOf="@+id/StatClassValue" />

    <TextView
        android:id="@+id/StatAgilityValue"
        android:layout_width="41dp"
        android:layout_height="20dp"
        android:layout_marginTop="19dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/StatAgility"
        app:layout_constraintTop_toBottomOf="@+id/StatExpValue" />

    <TextView
        android:id="@+id/WeaponRarity"
        android:layout_width="53dp"
        android:layout_height="19dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="34dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/Weapon"
        app:layout_constraintTop_toBottomOf="@+id/Equipment" />

    <TextView
        android:id="@+id/ArmorRarity"
        android:layout_width="53dp"
        android:layout_height="19dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/Armor"
        app:layout_constraintTop_toBottomOf="@+id/Equipment" />

    <TextView
        android:id="@+id/GoldValue"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/Gold"
        app:layout_constraintTop_toBottomOf="@+id/Objects" />

    <TextView
        android:id="@+id/DescriptionObject1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameObject1" />

    <TextView
        android:id="@+id/Gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="Or :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Objects" />

    <Button
        android:id="@+id/ButtonObject1"
        android:layout_width="96dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Utiliser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DescriptionObject1" />

    <TextView
        android:id="@+id/NameObject1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Gold" />

</androidx.constraintlayout.widget.ConstraintLayout>